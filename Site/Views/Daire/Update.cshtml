@model Site.Models.Mülkiyet

@{
    ViewBag.Title = "Daire Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group i {
            margin-right: 8px;
        }

        button[type="submit"] {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2><i class="fas fa-edit"></i> Daire Düzenle</h2>

        @using (Html.BeginForm("Update", "Daire", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.DaireID)
            <div class="form-group">
                @Html.LabelFor(model => model.DaireID)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    @Html.EditorFor(model => model.DaireID, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AdiSoyadi)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    @Html.EditorFor(model => model.AdiSoyadi, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Telefon)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    </div>
                    @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Daire Tipi")
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-home"></i></span>
                    </div>
                    <select class="form-control" id="DaireTipi" name="DaireTipi">
                        <option value="Kiracı" @(Model.DaireTipi == "Kiracı" ? "selected" : "")>Kiracı</option>
                        <option value="Ev Sahibi" @(Model.DaireTipi == "Ev Sahibi" ? "selected" : "")>Ev Sahibi</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.KisiSayisi)
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-users"></i></span>
                    </div>
                    @Html.EditorFor(model => model.KisiSayisi, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Güncelle</button>
        }

        <div style="margin-top: 20px;">
            @Html.ActionLink("Geri", "Daire", null, new { @class = "btn btn-secondary" })
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
