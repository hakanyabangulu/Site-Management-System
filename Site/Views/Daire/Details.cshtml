@model Site.Models.Daire

@{
    ViewBag.Title = "Daire Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1><i class="fas fa-building"></i> Daire Detayları</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-home"></i> Daire No: @Model.DaireID</h5>
                    <p class="card-text"><i class="fas fa-building"></i> Blok ID: @Model.BlokID</p>
                    <p class="card-text"><i class="fas fa-layer-group"></i> Kat: @Model.Kat</p>
                    <p class="card-text"><i class="fas fa-door-open"></i> Kapı No: @Model.KapiNo</p>
                </div>
            </div>
        </div>
    </div>

    <h2><i class="fas fa-info-circle"></i> Doluluk Bilgisi</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text"><strong>Dolu mu:</strong> @(ViewBag.DolulukBilgisi)</p>
                </div>
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Doluluğu Düzenle", "EditDoluluk", new { id = Model.DaireID }, new { @class = "btn btn-custom" })
        <a href="@Url.Action("Bilgiler", "Daire", new { id = Model.DaireID })" class="btn btn-custom">
            <i class="fas fa-info-circle"></i> Mülkiyet Bilgileri
        </a>
        <a href="@Url.Action("Aidat", "Daire", new { id = Model.DaireID })" class="btn btn-custom ml-2">
            <i class="fas fa-money-bill-wave"></i> Aidat Bilgileri
        </a>
        <a href="@Url.Action("Fatura", "Daire", new { id = Model.DaireID })" class="btn btn-custom ml-2">
            <i class="fas fa-money-bill-wave"></i> Fatura Bilgileri
        </a>
        <a href="@Url.Action("Otopark", "Daire", new { id = Model.DaireID })" class="btn btn-custom ml-2">
            <i class="fas fa-car"></i> Araç Bilgileri
        </a>
        @Html.ActionLink("Geri Dön", "Daire", null, new { @class = "btn btn-secondary ml-2" })
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        .fa {
            margin-right: 5px;
            color: #007bff;
            font-size: 1.2em;
            transition: color 0.3s;
        }

            .fa:hover {
                color: #0056b3;
            }

        .btn-custom {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-custom:hover {
                background-color: #0056b3;
                border-color: #004080;
                color: white;
            }

        .card-title i {
            color: #007bff;
            font-size: 1.5em;
            margin-right: 5px;
        }

        .card-text i {
            color: #007bff;
            margin-right: 5px;
        }

        h2 i {
            color: #007bff;
            margin-right: 10px;
        }

        h1 i {
            color: #007bff;
            margin-right: 10px;
        }
    </style>
}
