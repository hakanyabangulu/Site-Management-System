@model IEnumerable<Site.Models.Sakin>

@{
    ViewBag.Title = "Sakinler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="fas fa-users"></i> Sakinler</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th><i class="fas fa-building"></i> DaireNo</th>
                <th><i class="fas fa-user"></i> Adı Soyadı</th>
                <th><i class="fas fa-phone"></i> Telefonu</th>
                <th><i class="fas fa-cogs"></i> İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DaireID</td>
                    <td>@item.AdiSoyadi</td>
                    <td>@item.Telefon</td>
                    <td>
                        @Html.ActionLink("Düzenle", "Update", new { id = item.SakinID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.SakinID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bu sakin kaydını silmek istediğinizden emin misiniz?')" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    @Html.ActionLink("Yeni Sakin Ekle", "Create", null, new { @class = "btn btn-success" })
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        .fa {
            margin-right: 5px;
        }

        th, td {
            text-align: center;
        }
    </style>
}
