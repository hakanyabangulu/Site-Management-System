@model Site.Models.Otopark

@{
    ViewBag.Title = "Delete Otopark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="fas fa-trash-alt"></i> Delete Otopark</h2>

<div class="alert alert-danger">
    <h3><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this?</h3>
</div>

<div>
    <h4>Otopark Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <i class="fas fa-id-badge"></i> @Html.DisplayNameFor(model => model.OtoparkID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OtoparkID)
        </dd>
        <dt>
            <i class="fas fa-building"></i> @Html.DisplayNameFor(model => model.DaireID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DaireID)
        </dd>
        <dt>
            <i class="fas fa-car"></i> @Html.DisplayNameFor(model => model.Plaka)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Plaka)
        </dd>
        <dt>
            <i class="fas fa-money-bill-wave"></i> @Html.DisplayNameFor(model => model.UcretliParkYeriTutari)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UcretliParkYeriTutari)
        </dd>
        <dt>
            <i class="fas fa-car-side"></i> @Html.DisplayNameFor(model => model.AracSayisi)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AracSayisi)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
            <a href="@Url.Action("Otopark", "Otopark")" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
        </div>
    }
</div>
