@{
    ViewBag.Title = "Kullanıcı Mesajları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center text-primary">Kullanıcı Mesajları</h2>
        <button class="btn btn-outline-primary" onclick="window.location.reload()">Yenile</button>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive shadow rounded">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th scope="col">Ad Soyad</th>
                        <th scope="col">E-posta</th>
                        <th scope="col">Mesaj</th>
                        <th scope="col">Tarih</th>
                        <th scope="col">Durum</th>
                    </tr>
                </thead>
                
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Henüz bir mesaj yok. İlk mesajı bekliyoruz!
        </div>
    }
</div>

