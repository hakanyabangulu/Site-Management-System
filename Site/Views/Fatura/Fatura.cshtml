@model IEnumerable<Site.Models.Fatura>

@{
    ViewBag.Title = "Faturalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double totalFaturaTutari = Model.Sum(f => f.Tutar);
}





<h2><i class="fas fa-file-invoice"></i> Faturalar</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th><i class="fas fa-building"></i> DaireNo</th>
                <th><i class="fas fa-receipt"></i> Fatura Tipi</th>
                <th><i class="fas fa-calendar-alt"></i> Ay</th>
                <th><i class="fas fa-money-bill-wave"></i> Tutar</th>
                <th><i class="fas fa-cogs"></i> İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DaireID</td>
                    <td>@item.FaturaTipi</td>
                    <td>@item.Ay</td>
                    <td>@item.Tutar.ToString("C")</td>
                    <td>
                        @Html.ActionLink("Düzenle", "Update", new { id = item.FaturaID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.FaturaID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <h3>Toplam Fatura Tutarı: @totalFaturaTutari.ToString("C")</h3>
</div>



<div>
    @Html.ActionLink("Yeni Fatura Ekle", "Create", null, new { @class = "btn btn-success" })
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        .fa {
            margin-right: 5px;
        }
    </style>
}
